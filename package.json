{
    "name": "angularstarter",
    "version": "0.3.11",
    "description": "Base para iniciar proyecto con angular (version 6)",
    "author": "Michael Scott Bravo",
    "license": "MIT",
    "scripts": {
        "ng": "ng",
        "start": "ng serve",
        "build": "ng build",
        "test": "ng test",
        "lint": "ng lint",
        "e2e": "ng e2e",
        "format": "prettier {src,e2e}/**/*.{ts,tsx,json,md,scss,css,less} --write",
        "pre-commit": "lint-staged",
        "img": "gulp --gulpfile gulp-config/gulpfile.js img",
        "tiny": "gulp --gulpfile gulp-config/gulpfile.js tinypng",
        "test-j": "jest",
        "test-watch": "jest --watch",
        "test-ci": "jest --runInBand",
        "test-coverage": "jest --coverage",
        "e2e-tc": "testcafe-live chrome e2e/**/*.e2e-spec.ts",
        "e2e-ci": "testcafe all e2e/**/*.e2e-spec.ts --app 'yarn start' --app-init-delay 5000"
    },
    "lint-staged": {
        "{src,e2e}/**/*.{js,jsx,ts,tsx}": [
            "yarn lint",
            "git add"
        ],
        "{src,e2e}/**/*.{js,jsx,ts,tsx,css,scss,less,md}": [
            "prettier --write",
            "git add"
        ]
    },
    "dependencies": {
        "@angular/animations": "^6.0.2",
        "@angular/common": "^6.0.2",
        "@angular/compiler": "^6.0.2",
        "@angular/core": "^6.0.2",
        "@angular/forms": "^6.0.2",
        "@angular/http": "^6.0.2",
        "@angular/platform-browser": "^6.0.2",
        "@angular/platform-browser-dynamic": "^6.0.2",
        "@angular/router": "^6.0.2",
        "bootstrap": "^4.1.1",
        "core-js": "^2.5.4",
        "jquery": "^3.3.1",
        "popper.js": "^1.14.3",
        "rxjs": "^6.0.0",
        "zone.js": "^0.8.26"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "~0.6.3",
        "@angular/cli": "6.0.3",
        "@angular/compiler-cli": "^6.0.2",
        "@angular/language-service": "^6.0.2",
        "@types/jasmine": "^2.8.6",
        "@types/jasminewd2": "~2.0.3",
        "@types/jest": "^22.2.3",
        "@types/node": "~8.9.4",
        "codelyzer": "~4.2.1",
        "gulp": "4.0.0",
        "gulp-eslint": "^4.0.2",
        "gulp-imagemin": "^4.1.0",
        "husky": "^0.14.3",
        "jasmine-core": "~2.99.1",
        "jasmine-spec-reporter": "~4.2.1",
        "jest": "^22.4.3",
        "jest-preset-angular": "^5.2.2",
        "jest-zone-patch": "^0.0.8",
        "karma": "~1.7.1",
        "karma-chrome-launcher": "~2.2.0",
        "karma-coverage-istanbul-reporter": "~1.4.2",
        "karma-jasmine": "~1.1.1",
        "karma-jasmine-html-reporter": "^0.2.2",
        "lint-staged": "^7.0.5",
        "prettier": "^1.12.1",
        "protractor": "~5.3.0",
        "testcafe": "^0.19.2",
        "testcafe-angular-selectors": "^0.3.0",
        "testcafe-live": "^0.1.3",
        "tinypng-loader": "^1.0.9",
        "ts-node": "~5.0.1",
        "tslint": "~5.9.1",
        "tslint-config-prettier": "^1.12.0",
        "typescript": "~2.7.2"
    }
}